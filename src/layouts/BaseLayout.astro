---
import Profile from "../components/Profile.astro";
import BaseHead from "../components/BaseHead.astro";
import FloatTool from "../components/FloatTool.astro";
import { SITE_TAB, SITE_TITLE, SITE_DESCRIPTION } from "../consts";
const { title, image } = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale} class="bg-base-300">
  <head>
    <meta charset="UTF-8" />
    <title>{`${title} - ${SITE_TAB}`}</title>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image={image} />
  </head>
  <body>
    <div class="max-w-6xl mx-auto">
      <div
        class="relative grid gap-4 p-0 lg:p-4 md:grid-cols-5 lg:grid-cols-4 top-20 md:top-0 text-base lg:text-lg"
      >
        {/* Sidebar */}
        <aside
          class="md:col-span-1 top-4 p-2 hidden md:block order-2 md:order-1 space-y-4"
        >
          <Profile />
          <!-- <CategoryCard /> -->
          <!-- <TagCard /> -->
          <div class="grid gap-8 w-full sticky top-8">
            <!-- <ToolCard /> -->
            <!-- <TocCard /> -->
          </div>
        </aside>

        {/* Main Content */}
        <main
          id="swup"
          class="col-span-3 md:col-span-4 lg:col-span-3 p-2 order-1 md:order-2"
        >
          <div class="grid gap-8 fade-in-up">
            <slot />
            <FloatTool />
            <!-- <Footer /> -->
          </div>
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
