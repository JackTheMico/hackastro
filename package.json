{
  "name": "hackastro",
  "type": "module",
  "version": "0.0.1",
  "commitlint": {
    "extends": [
      "gitmoji"
    ]
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "pnpm run check:astro && pnpm run check:eslint && pnpm run check:prettier",
    "check:astro": "astro check",
    "check:eslint": "eslint .",
    "check:prettier": "prettier --check .",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier -w .",
    "prepare": "husky",
    "changelog": "conventional-changelog -p gitmoji-config -i CHANGELOG.md -s -r 0"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint -c .eslintrc.js"
    ],
    "*.{css,less,scss}": [
      "stylelint   --fix"
    ],
    "*.{ts,tsx,json,js,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.4",
    "@astrojs/partytown": "^2.1.3",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.4",
    "@astrojs/vercel": "^8.0.1",
    "@swup/astro": "^1.5.0",
    "astro": "^5.1.4",
    "astro-embed": "^0.9.0",
    "astro-icon": "^1.1.5",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@eslint/js": "^9.18.0",
    "@iconify-json/material-symbols": "^1.2.12",
    "@iconify-json/ri": "^1.2.5",
    "astro-eslint-parser": "^1.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "commitlint-plugin-gitmoji": "^2.2.6",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^4.12.23",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-format": "^1.0.1",
    "gitmoji-cli": "^9.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "{cli,config-conventional}": "link:@commitlint/{cli,config-conventional}"
  }
}
